#!/bin/sh


screenshot(){
	echo file name: ; read input 

	sleep 3

	ffmpeg -f x11grab -video_size 1920x1080 -i $DISPLAY -vframes 1 ~/pictures/$input.png > /dev/null 2>&1 
	clear ; echo "${input} added to Pictures."
}

short(){
	position=0

	for folder in ~/Web/Apps/* ; do
		position=$((position+1))
		echo $position $folder
	done

	echo -n 'Enter:'; read choice 

	position=0

	for folder in ~/Web/Apps/* ; do
		position=$((position+1))
		if [ $choice == $position ] ; then
 			cd $folder ;clear; ls -l 
		fi
	done
}


#https://github.com/microsoft/uf2/blob/master/utils/uf2conv.md
uf2(){
  file=$1
  file_op=$PWD/$2.uf2
  script=$HOME/downloads/git/uf2/utils/uf2conv.py
  $script -c -f 0xe48bff56 -b 0x10000000 $file -o $file_op

  echo -e "New		=>\n
============================="
  
  $script -i $file_op

}

